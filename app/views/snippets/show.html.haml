- content_for :header do
  = stylesheet_link_tag '/javascripts/google-code-prettify/styles/sunburst'
  = javascript_include_tag '/javascripts/google-code-prettify/prettify'
  :javascript
    $(function(){ prettyPrint() });

%p#notice= notice

%p
  %b Author:
  = @snippet.author
%p
  %b Title:
  = @snippet.title
%p
  %b Filetype:
  = @snippet.filetype
%p
  %b Body:
  %pre.prettyprint= @snippet.body

= link_to 'Edit', edit_snippet_path(@snippet)
\|
= link_to 'Back', snippets_path
