= form_for @snippet do |f|
  -if @snippet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@snippet.errors.count, "error")} prohibited this snippet from being saved:"
      %ul
        - @snippet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    .input
      = f.text_field :name, class: 'xlarge span2', placeholder: 'a filename'
      %span.help-inline (optional)

  .field
    = f.label :filetype
    .input
      = f.select :filetype, filetype_suggesions, class: 'xxlarge'

  .field
    = f.label :description
    .input
      = f.text_field :description, class: 'xlarge span5', placeholder: 'description'
      %span.help-inline (optional)

  .field
    = f.label :body
    .input= f.text_area :body, class: 'xxlarge span12', rows: 30

  .actions
    = button_tag 'Clear', type: 'reset', class: 'btn'
    = f.submit 'Save', class: 'btn primary'

